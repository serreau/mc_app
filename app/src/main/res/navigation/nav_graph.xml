<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/createJobFragment"
        android:name="sero.com.ui.createjob.CreateJobFragment"
        android:label="CreateJobFragment"
        tools:layout="@layout/activity_main"/>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="sero.com.ui.detailJob.DetailsFragment"
        android:label="DetailsFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="sero.com.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_kanbanViewPager"
            app:destination="@id/kanbanViewPager" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="sero.com.ui.signup.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanbanViewPager"
        android:name="sero.com.ui.viewpager.KanbanViewPager"
        android:label="KanbanViewPager" >
        <action
            android:id="@+id/action_kanbanViewPager_to_createJobFragment"
            app:destination="@id/createJobFragment" />
        <action
            android:id="@+id/action_kanbanViewPager_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_kanbanViewPager_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_kanbanViewPager_to_kanbansFragment"
            app:destination="@id/kanbansFragment" />
    </fragment>
    <fragment
        android:id="@+id/kanbansFragment"
        android:name="sero.com.ui.kanbans.KanbansFragment"
        android:label="KanbansFragment" >
        <action
            android:id="@+id/action_kanbansFragment_to_kanbanViewPager"
            app:destination="@id/kanbanViewPager" />
    </fragment>
</navigation>